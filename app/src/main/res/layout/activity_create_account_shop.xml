<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/shop" />

    <TextView
        android:id="@+id/newShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Shop Form"
        android:textSize="40dp"
        android:textColor="#32CD32"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/RelUserInfo"
        android:layout_below="@+id/newShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/editTextShopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#006400"
            android:hint="Enter shop name"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/editTextShopLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextShopname"
            android:layout_marginTop="-2dp"
            android:ems="15"
            android:hint="Enter location"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#006400"
            android:hint="Enter username"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextShopLocation"/>

        <EditText
            android:id="@+id/editTextUseremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#006400"
            android:hint="Enter email"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextUsername"/>


        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPassword"
            android:hint="Enter password"
            android:layout_below="@id/editTextUseremail"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPassword"
            android:hint="Cofirm password"
            android:layout_below="@id/editTextPassword"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/RelUserInfo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textSize="18dp"
        android:background="@drawable/btncreateuser"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/TextViewGotoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Created? Click here to login"
        android:layout_below="@id/btnCreateAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#0000EE"/>


</RelativeLayout>